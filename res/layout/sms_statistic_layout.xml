<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="none" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRowHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_background"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tableHeaderTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="6"
                android:gravity="center"
                android:text="@string/sms_statistic"
                android:textColor="@color/txt_default"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_background"
            android:gravity="center_horizontal" >

            <Spinner
                android:id="@+id/view_by_spinner"
                android:layout_width="fill_parent"
                android:prompt="@string/spinner_view_by" />

            <ImageButton
                android:id="@+id/refresh_statistic_btn"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:src="@drawable/table_refresh" />

            <ImageButton
                android:id="@+id/delete_statistic_btn"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:src="@drawable/table_row_delete" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowHeaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_background" >

            <ImageView
                android:id="@+id/dateImg"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:src="@drawable/calendar" />

            <ImageView
                android:id="@+id/receivedSmsImg"
                android:contentDescription="@string/na"
                android:gravity="center_horizontal"
                android:src="@drawable/inbox" />
        </TableRow>
        <!-- Generated call statistic rows -->
    </TableLayout>

</ScrollView>